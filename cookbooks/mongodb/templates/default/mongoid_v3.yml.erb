<%= @environment %>:
  clients:
    default:
      hosts:
      <% @hosts.each do |host, port| -%>
        - <%= host %>:<%= port %>
      <% end -%> 
      database: <%=@database%>
  # Mongoid specific configuration options
  options:
  consistency: :eventual
  max_retries_on_connection_failure: 5
